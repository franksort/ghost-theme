{{!< default}}
{{! The tag above will insert everything in this file into the {body} of the default.hbs template }}

{{#post}}

  <article class="{{post_class}}">
    <header>
      <section>
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
        {{!tags prefix=" on "}}
      </section>
      <h1 class="post-title">{{title}}</h1>
    </header>

    <section class="post-content">
      {{content}}
    </section>

  </article>

{{/post}}
