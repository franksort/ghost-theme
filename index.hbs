{{!< default}}
{{! The tag above will insert everything in this file into the {body} of the default.hbs template }}

<div id="post-list">

  {{#foreach posts}}
    <article class="{{post_class}}">
    <header>
      <h2><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM D, YYYY"}}</time>
    </footer>
    </article>
  {{/foreach}}

</div>
